<Page x:Class="ProgramModulesDevelopmentKursovik.Pages.Auth"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:ProgramModulesDevelopmentKursovik.Pages"
      mc:Ignorable="d" 
      Title="Авторизация">

    <StackPanel Width="160" HorizontalAlignment="Center" VerticalAlignment="Center" Margin="20">
        <TextBlock HorizontalAlignment="Left" Margin="0,0,0,10" VerticalAlignment="Top" FontSize="24" TextAlignment="Center">
            <Run Language="ru-ru" Text="Авторизация"/>
        </TextBlock>
        <TextBlock TextWrapping="Wrap" Text="Электронная почта:" Width="160" Margin="0,0,0,5"/>
        <TextBox Name="tbEmail" TextWrapping="Wrap" Width="160" Margin="0,0,0,5" />
        <TextBlock TextWrapping="Wrap" Text="Пароль:" Margin="0,0,0,5"/>
        <PasswordBox Name="pbPassword" Width="160" Margin="0,0,0,10" />
        <Button x:Name="ButtonGo" Click="ButtonGo_Click" Content="Войти" Width="160" Margin="0,0,0,5" IsDefault="True"/>
        <Button x:Name="Register" Click="Register_Click" Content="Зарегистрироваться" Width="160" Margin="0,0,0,5"/>
    </StackPanel>

</Page>
