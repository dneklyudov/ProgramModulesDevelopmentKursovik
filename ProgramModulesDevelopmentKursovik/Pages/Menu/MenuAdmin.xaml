<Page x:Class="ProgramModulesDevelopmentKursovik.Pages.Menu.MenuAdmin"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:ProgramModulesDevelopmentKursovik.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="400" d:DesignWidth="165" Width="140"
      Title="MenuAdmin">

	<StackPanel>
        <TextBlock Text="Заказы и заявки" FontSize="14" Margin="0,5"/>
        <Button Style="{StaticResource Menu}" Content="Заявки на ремонт" Click="ButtonMenu_Click"/>
        <TextBlock Text="Справочники" FontSize="14" Margin="0,5"/>
        <Button Style="{StaticResource Menu}" Content="Единицы измерения" Click="ButtonMenu_Click"/>
        <Button Style="{StaticResource Menu}" Content="Страны" Click="ButtonMenu_Click"/>
        <Button Style="{StaticResource Menu}" Content="Производители" Click="ButtonMenu_Click"/>
        <Button Style="{StaticResource Menu}" Content="Поставщики" Click="ButtonMenu_Click"/>
        <Button Style="{StaticResource Menu}" Content="Роли" Click="ButtonMenu_Click"/>
        <Button Style="{StaticResource Menu}" Content="Статусы платежей" Click="ButtonMenu_Click"/>
        <Button Style="{StaticResource Menu}" Content="Статусы заказов" Click="ButtonMenu_Click"/>
    </StackPanel>
</Page>
