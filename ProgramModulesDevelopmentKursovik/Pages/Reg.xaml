<Page x:Class="ProgramModulesDevelopmentKursovik.Pages.Reg"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:ProgramModulesDevelopmentKursovik.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Регистрация">

    <StackPanel Width="160" HorizontalAlignment="Center" VerticalAlignment="Center" Margin="20" >
        <TextBlock HorizontalAlignment="Left" Margin="0,0,0,10" VerticalAlignment="Top" FontSize="24" TextAlignment="Center">
            <Run Language="ru-ru" Text="Регистрация"/>
        </TextBlock>
        <TextBlock TextWrapping="Wrap" Text="Фамилия:" Width="160" Margin="0,0,0,5"/>
        <TextBox Name="tbSurname" TextWrapping="Wrap" Width="160" Margin="0,0,0,5" />

        <TextBlock TextWrapping="Wrap" Text="Имя:" Width="160" Margin="0,0,0,5"/>
        <TextBox Name="tbName" TextWrapping="Wrap" Width="160" Margin="0,0,0,5" />

        <TextBlock TextWrapping="Wrap" Text="Отчество:" Width="160" Margin="0,0,0,5"/>
        <TextBox Name="tbPatronymic" TextWrapping="Wrap" Width="160" Margin="0,0,0,5" />

        <TextBlock TextWrapping="Wrap" Text="Телефон:" Width="160" Margin="0,0,0,5"/>
        <TextBox Name="tbPhone" TextWrapping="Wrap" Width="160" Margin="0,0,0,5" />

        <TextBlock TextWrapping="Wrap" Text="Электронная почта:" Width="160" Margin="0,0,0,5"/>
        <TextBox Name="tbEmail" TextWrapping="Wrap" Width="160" Margin="0,0,0,5" />
        
        <TextBlock TextWrapping="Wrap" Text="Пароль:" Margin="0,0,0,5"/>
        <PasswordBox Name="pbPassword" Width="160" Margin="0,0,0,10" PasswordChanged="PasswordChanged" />

        <TextBlock TextWrapping="Wrap" Text="Повторите пароль:" Margin="0,0,0,5"/>
        <PasswordBox x:Name="pbPassword1" Width="160" Margin="0,0,0,10" PasswordChanged="PasswordChanged"/>

        <Button x:Name="btnRegister" Content="Зарегистрироваться" Width="160" Margin="0,0,0,5" Click="BtnRegister_Click"/>
        <Button x:Name="btnBack" Click="BtnBack_Click" Content="Отмена" Width="160" Margin="0,0,0,5"/>

    </StackPanel>

</Page>
