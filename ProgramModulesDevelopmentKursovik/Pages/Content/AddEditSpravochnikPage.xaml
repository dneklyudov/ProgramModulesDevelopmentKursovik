<Page x:Class="ProgramModulesDevelopmentKursovik.Pages.Content.AddEditSpravochnikPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:ProgramModulesDevelopmentKursovik.Pages.Content"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="AddEditSpravochnikPage">


    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <TextBlock x:Name="txbHeader" Grid.Row="0" Style="{StaticResource Title}" Margin="0,0,0,15"/>

        <StackPanel Grid.Row="1" Orientation="Horizontal" HorizontalAlignment="Left" Margin="0,0,0,15">
            <Button x:Name="btnSave" Content="Сохранить" Height="30" Width="80" Click="BtnSave_Click"/>
            <Button x:Name="btnCancel" Content="Отмена" Margin="10,0,0,0" Height="30" Width="80" Click="BtnCancel_Click"/>
        </StackPanel>

        <TextBlock Grid.Row="2" TextWrapping="Wrap" Text="Название:" Margin="0,0,0,5"/>
        <TextBox Grid.Row="3" HorizontalAlignment="Left" x:Name="txbTitle" Text="{Binding title}" Margin="0,0,0,5" Height="30" Width="300" Padding="0,5,0,0" />

    </Grid>
</Page>