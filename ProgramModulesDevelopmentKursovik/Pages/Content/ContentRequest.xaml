        <ListView x:Name="listRequests" HorizontalAlignment="Stretch" Margin="0" VerticalAlignment="Stretch" Grid.Row="2">
            <ListView.View>
                <GridView>
                    <GridViewColumn DisplayMemberBinding="{Binding Path=id}" Header="ID" Width="100"/>
                    <GridViewColumn DisplayMemberBinding="{Binding Path=title}" Header="Заголовок" Width="100"/>
                    <GridViewColumn DisplayMemberBinding="{Binding Path=description}" Header="Описание" Width="100"/>
                    <GridViewColumn DisplayMemberBinding="{Binding Path=datefrom}" Header="Дата открытия" Width="100"/>
                    <GridViewColumn DisplayMemberBinding="{Binding Path=dateto}" Header="Дата закрытия" Width="100"/>
                    <GridViewColumn DisplayMemberBinding="{Binding Path=user_id}" Header="Пользователь" Width="100"/>
                    <GridViewColumn DisplayMemberBinding="{Binding Path=donestate_id}" Header="Статус заявки" Width="100"/>
                    <GridViewColumn DisplayMemberBinding="{Binding Path=paymentstate_id}" Header="Статус оплаты" Width="100"/>
                </GridView>
            </ListView.View>
        </ListView>

        <TextBlock x:Name="tbCounter" Grid.Row="4" Height="30" Padding="10,6" VerticalAlignment="Center"/>
        <Button x:Name="btnToPDF" Content="PDF" Grid.Row="4" Height="30" Width="100" VerticalAlignment="Center" Margin="10,10,10,0" />

