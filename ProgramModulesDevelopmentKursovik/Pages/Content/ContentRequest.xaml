        <TextBlock Grid.Row="0" Style="{StaticResource Title}" Margin="0,0,0,15">Заявки на ремонт</TextBlock>
        
        <StackPanel Grid.Row="1" Orientation="Horizontal" HorizontalAlignment="Left" Margin="0,0,0,15">

            <Button x:Name="BtnAdd" Height="30" Width="80" Margin="0" >Добавить</Button>
            <Button x:Name="BtnRemove" Height="30" Width="80" Margin="10,0,0,0" >Удалить</Button>
            <TextBox x:Name="TextSearch" Margin="10,0,0,0" Height="30" Width="100"/>
            <ComboBox x:Name="ComboFilter"  Width="Auto" Height="30" Margin="10,0,0,0" />
            <ComboBox x:Name="ComboSort"  Margin="10,0,10,0" Height="30" Width="Auto"/>

