<Page x:Class="ProgramModulesDevelopmentKursovik.Pages.Content.ContentRequests"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:ProgramModulesDevelopmentKursovik.Pages.Content"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Requests">

    <Page.Resources>
        <Style TargetType="ListViewItem">
            <Setter Property="BorderBrush" Value="Gainsboro" />
            <Setter Property="BorderThickness" Value="0,1,0,1" />
        </Style>
    </Page.Resources>

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <TextBlock Grid.Row="0" Style="{StaticResource Title}" Margin="0,0,0,15">Заявки на ремонт</TextBlock>
        
        <StackPanel Grid.Row="1" Orientation="Horizontal" HorizontalAlignment="Left" VerticalAlignment="Center" Margin="0,0,0,15">
            <Button x:Name="BtnAdd" Height="30" Width="80" Margin="0">Добавить</Button>
            <TextBlock Text="Поиск:" Margin="50,7,5,0"/>
            <TextBox x:Name="TextSearch" Margin="0,0,0,0" Height="30" Width="100" Padding="5,5,5,0"/>
            <ComboBox x:Name="ComboFilter"  Width="Auto" Height="30" Margin="10,0,0,0" />
            <ComboBox x:Name="ComboSort"  Margin="10,0,10,0" Height="30" Width="Auto"/>
         </StackPanel>

        <ListView x:Name="listRequests" HorizontalAlignment="Stretch" Margin="0" VerticalAlignment="Stretch" Grid.Row="2">
            <ListView.View>
                <GridView>
                    <GridViewColumn DisplayMemberBinding="{Binding Path=id}" Header="ID" Width="Auto"/>
                    <GridViewColumn Header="Действия" Width="160">
                        <GridViewColumn.CellTemplate>
                            <DataTemplate>
                                <StackPanel Orientation="Horizontal">
                                    <Button x:Name="BtnChangeInTable" Height="26" Width="70">Изменить</Button>
                                    <Button x:Name="BtnRemoveInTable" Height="26" Width="70" Margin="5,0,0,0">Удалить</Button>
                                </StackPanel>
                            </DataTemplate>
                        </GridViewColumn.CellTemplate>
                    </GridViewColumn>
                    <GridViewColumn DisplayMemberBinding="{Binding Path=title}" Header="Заголовок" Width="Auto"/>
                    <GridViewColumn DisplayMemberBinding="{Binding Path=description}" Header="Описание" Width="Auto"/>
                    <GridViewColumn DisplayMemberBinding="{Binding Path=dateopen}" Header="Дата открытия" Width="Auto"/>
                    <GridViewColumn DisplayMemberBinding="{Binding Path=dateclose}" Header="Дата закрытия" Width="Auto"/>
                    <GridViewColumn DisplayMemberBinding="{Binding Path=Users.email}" Header="Пользователь" Width="100"/>
                    <GridViewColumn DisplayMemberBinding="{Binding Path=DoneStates.title}" Header="Статус заявки" Width="Auto"/>
                    <GridViewColumn DisplayMemberBinding="{Binding Path=PaymentState.title}" Header="Статус оплаты" Width="Auto"/>
                </GridView>
            </ListView.View>
        </ListView>

        <TextBlock x:Name="tbCounter" Grid.Row="4" Height="30" Padding="10,6" VerticalAlignment="Center"/>
        <Button x:Name="btnToPDF" Content="PDF" Grid.Row="4" Height="30" Width="100" VerticalAlignment="Center" Margin="10,10,10,0" />

    </Grid>
</Page>
